<SecondWindow>
    name: 'second'
    GridLayout:
        rows: 8
        padding: [5, 5, 5, 5]
        BoxLayout:
            size_hint: .3, .3
            MDLabel:#MDIcon:
#                font_size: '36sp'
#                font_name: 'fonts/Semir.otf'
                halign: 'center'
                text: '- Liquid and Volume measures -' #'Icon'
#                source: 'img/jar.png'
                color: app.theme_cls.primary_dark
        MDSeparator:
            size: (5, 5)
        BoxLayout:
            size_hint: .5, .25
            MDTextFieldRect:
#                foreground_color: app.theme_cls.primary_dark
#                background_active: 'bg.jpg'
#                background_normal: 'bg.jpg'
                halign: 'center'
                input_type: 'number'
#                normal_color: app.theme_cls.primary_color
#                color_active: app.theme_cls.primary_dark
#                size_hint: .5, .4
#                font_size: '34sp'
#                font_name: 'fonts/Semir.otf'
                pos_hint: {'center_x': .5, 'center_y': .5}
                background_color: app.theme_cls.primary_light
                id: input_amount
                text: ''
                multiline: False
                hint_text: 'Enter Amount'
#                hint_text_color: app.theme_cls.primary_light
#                line_color_focus: app.theme_cls.primary_color#color_mode: 'accent'
                icon_left: 'cup'
                required: True
                helper_text_mode: 'on_error'
#                mode: 'rectangle'
        BoxLayout:
            size_hint: .9, .9
            MDCard:
                background_normal: ''
#                md_bg_color: app.theme_cls.primary_light #.3, 0, .2, .6
                orientation: "vertical"
                padding: "8dp"
                MDLabel:
#                    font_name: 'fonts/Semir.otf'
                    halign: 'center'
#                    font_size: '36sp'
                    size_hint: 1, .5
                    id: imperial_unit
                    text: root.imperial_unit
                    color: app.theme_cls.primary_light
                MDSeparator:
                    height: "1dp"
                MDLabel:
#                    font_name: 'fonts/Semir.otf'
                    halign: 'center'
#                    size_hint: 1, .3
                    id: result
#                    font_size: '36sp'
                    text: root.result
                    color: app.theme_cls.primary_dark
                MDSeparator:
                    height: "1dp"
                MDLabel:
                    size_hint: 1, .5
                    halign: 'center'
                    valign: 'middle'
#                    font_size: '36sp'
#                    font_name: 'fonts/Semir.otf'
                    id: metric_unit
                    text: root.metric_unit
                    color: app.theme_cls.primary_light

        BoxLayout:
            MDRectangleFlatButton:
                size_hint: .5, .5
                pos_hint: {'center_x': .5, 'center_y': .5}
                text: 'Units'
                on_release: root.change_units()
            MDRectangleFlatButton:
                size_hint: .5, .5
                pos_hint: {'center_x': .5, 'center_y': .5}
                text: 'Convert'
                on_release: root.conversion()
        BoxLayout:
            MDRectangleFlatButton:
                size_hint: .9, .9
                pos_hint: {'center_x': .5, 'center_y': .5}
                text: 'Back!!'
                on_release:
                    app.root.current = 'main'
                    root.manager.transition.direction = 'right'
#                    root.manager.transition = FadeTransition()
